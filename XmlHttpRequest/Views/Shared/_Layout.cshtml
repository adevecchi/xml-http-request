    <link rel="stylesheet" href="~/css/lib/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/css/lib/adminlte/adminlte.min.css" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
